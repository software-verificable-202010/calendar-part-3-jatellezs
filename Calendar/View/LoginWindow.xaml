<Window x:Class="Calendar.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBoxUserName" Width="500" Height="30" Margin="0 0 0 100" FontSize="18"></TextBox>
        <Button x:Name="ButtonLogin" Width="150" Height="50" Margin="0 100 0 0" FontSize="18" Click="ButtonLogin_Click">Log In</Button>
    </Grid>
</Window>
